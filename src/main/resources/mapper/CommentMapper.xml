<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="comment">
<insert id="save" parameterType="CDTO">
    insert into comment1_table(boardId,commentWriter,commentContents,commentCreatedDate)values (#{boardId},#{commentWriter},#{commentContents},now())
</insert>
    <select id="findAll" parameterType="Long" resultType="CDTO">
        select * from comment1_table where boardId=#{boardId} order by id desc
    </select>
</mapper>