<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="board">
<insert id="save" parameterType="BDTO">
    insert into board1_table(boardWriter,boardTitle,boardContents,boardProfileName,boardCreatedDate)values(#{boardWriter},#{boardTitle},#{boardContents},#{boardProfileName},now())
</insert>
    <select id="findAll" resultType="BDTO">
        select * from board1_table;
    </select>
    <select id="pagingList" parameterType="java.util.HashMap" resultType="BDTO">
        select *from board1_table order by id desc limit #{start},#{limit}
    </select>
    <select id="count" resultType="int">
        select count(id) from board1_table
    </select>
<update id="hitsAdd" parameterType="Long">
    update  board1_table set boardHits=boardHits+1 where id=#{id}
</update>
    <select id="detail" parameterType="Long" resultType="BDTO">
        select *from board1_table where id=#{id}
    </select>
    <select id="findById" parameterType="Long" resultType="BDTO">
        select *from board1_table where id=#{id}
    </select>
    <update id="update" parameterType="BDTO">
        update board1_table set boardTitle=#{boardTitle},boardContents=#{boardContents},boardProfileName=#{boardProfileName} where id=#{id}
    </update>
    <delete id="delete" parameterType="Long">
        delete from board1_table where id=#{id}
    </delete>
    <select id="search" parameterType="java.util.HashMap" resultType="BDTO">
        select *from board1_table where ${type}
        like concat('%',#{q},'%') order by id desc;
    </select>
</mapper>